{
  "name": "whynopadlock",
  "version": "1.0.6",
  "description": "Checks for http connections on an https site",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel ./src -d ./lib",
    "clean": "rm -rf ./lib",
    "prepublish": "npm run build",
    "coverage": "npm run build && istanbul cover _mocha -- --compilers js:babel/register tests/*.js && istanbul check-coverage --statements 99 --branches 93 --functions 100 --lines 99",
    "test": "npm run build && mocha --compilers js:babel/register tests",
    "ci": "npm run lint",
    "lint": "standard 'tests/**/*' 'src/**/*' --verbose | snazzy && echo üçª All good!"
  },
  "standard": {
    "globals": [
      "$",
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "context",
      "describe",
      "expect",
      "it",
      "sandbox",
      "sinon",
      "Image"
    ]
  },
  "engines": {
    "node": "6.1.0",
    "npm": "3.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/richardstevens/whynopadlock"
  },
  "keywords": [
    "https",
    "whynopadlock",
    "secure",
    "checker",
    "check",
    "insecure",
    "security",
    "http",
    "ssl"
  ],
  "author": "Richard Stevens <rsrichardstevens@googlemail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/richardstevens/whynopadlock/issues"
  },
  "homepage": "https://github.com/richardstevens/whynopadlock",
  "dependencies": {
    "cheerio": "^0.19.0",
    "colors": "^1.1.2",
    "insecurity": "^3.1.0",
    "nodemailer": "^1.4.0",
    "request": "^2.60.0",
    "url-parse": "^1.2.0"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "chai": "^3.5.0",
    "chai-lint": "^0.1.1",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "publish": "^0.5.0",
    "sinon": "^1.17.3",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  }
}
